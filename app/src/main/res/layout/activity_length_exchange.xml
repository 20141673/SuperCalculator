<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom">

    <TableRow
        android:layout_width="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_weight="1">
            <Spinner
                android:id="@+id/lengthupspinner"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:entries="@array/LengthUnit"/>
            <TextView
                android:id="@+id/lengthuptext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="fill_horizontal"
                android:gravity="right|center_vertical"

                android:text="20"
                android:textSize="50dp"/>
        </LinearLayout>
    </TableRow>
    <TableRow>
        <TextView
            android:text="@string/line"/>
    </TableRow>
    <TableRow
        android:layout_width="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_weight="1">
            <Spinner
                android:id="@+id/lengthdownspinner"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:entries="@array/LengthUnit"/>
            <TextView
                android:id="@+id/lengthdowntext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="fill_horizontal"
                android:gravity="right|center_vertical"
                android:clickable="true"
                android:text="20"
                android:textSize="50dp"/>
        </LinearLayout>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableLayout
            android:layout_weight="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TableRow>
                <Button
                    android:id="@+id/lengthseven"
                    android:layout_weight="1"
                    android:onClick="clickButton"
                    android:text="7"/>
                <Button
                    android:id="@+id/lengtheight"
                    android:layout_weight="1"
                    android:onClick="clickButton"
                    android:text="8"/>
                <Button
                    android:id="@+id/lengthnine"
                    android:layout_weight="1"
                    android:onClick="clickButton"
                    android:text="9"/>
            </TableRow>
            <TableRow>
                <Button
                    android:id="@+id/lengthfour"
                    android:layout_weight="1"
                    android:onClick="clickButton"
                    android:text="4"/>
                <Button
                    android:id="@+id/lengthfive"
                    android:layout_weight="1"
                    android:onClick="clickButton"
                    android:text="5"/>
                <Button
                    android:id="@+id/lengthsix"
                    android:layout_weight="1"
                    android:onClick="clickButton"
                    android:text="6"/>
            </TableRow>
        </TableLayout>
        <GridLayout
            android:layout_weight="1"
            android:rowCount="2"
            android:columnCount="1"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/lengthac"
                android:layout_rowSpan="2"
                android:layout_gravity="fill_vertical"
                android:onClick="clickButton"
                android:text="AC"/>
        </GridLayout>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableLayout
            android:layout_weight="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TableRow
                android:layout_width="match_parent"
                android:layout_gravity="fill_horizontal">
                <Button
                    android:id="@+id/lengthone"
                    android:layout_weight="1"
                    android:text="1"/>
                <Button
                    android:layout_weight="1"
                    android:id="@+id/lengthtwo"
                    android:text="2"/>
                <Button
                    android:id="@+id/lengththree"
                    android:layout_weight="1"
                    android:text="3"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent">
                <Button
                    android:id="@+id/lengthzero"
                    android:layout_weight="1"
                    android:text="0"/>
                <Button
                    android:id="@+id/lengthpoint"
                    android:layout_weight="1"
                    android:text="."/>
            </TableRow>
        </TableLayout>
        <GridLayout
            android:layout_weight="1"
            android:rowCount="2"
            android:columnCount="1"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/lengthreturn"
                android:layout_rowSpan="2"
                android:layout_gravity="fill_vertical"
                android:text="@string/returnicon"/>
        </GridLayout>
    </TableRow>
</TableLayout>
