<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:rowCount="8"
            android:columnCount="4" >

    <Button
        android:layout_weight="1"
        android:id="@+id/simpleclear"
        android:text="C"/>
    <Button
        android:id="@+id/simplereturn"
        android:text="@string/returnicon"/>
    <Button
        android:id="@+id/simpledevide"
        android:text="/"/>
    <Button
        android:id="@+id/simplemultiply"
        android:text="Ã—"/>

    <Button
        android:id="@+id/simpleseven"
        android:text="7"/>
    <Button
        android:id="@+id/simpleeight"
        android:text="8"/>
    <Button
        android:id="@+id/simplenine"
        android:text="9"/>
    <Button
        android:id="@+id/simpleminus"
        android:text="-"/>

    <Button
        android:id="@+id/simplefour"
        android:text="4"/>
    <Button
        android:id="@+id/simplefive"
        android:text="5"/>
    <Button
        android:id="@+id/simplesix"
        android:text="6"/>
    <Button
        android:id="@+id/simpleplus"
        android:text="+"/>

    <Button
        android:id="@+id/simpleone"
        android:text="1"/>
    <Button
        android:id="@+id/simpletwo"
        android:text="2"/>
    <Button
        android:id="@+id/simplethree"
        android:text="3"/>
    <Button
        android:id="@+id/simpleequal"
        android:layout_rowSpan="3"
        android:layout_gravity="fill"
        android:text="="/>

    <Button
        android:id="@+id/simplepercent"
        android:text="%"/>
    <Button
        android:id="@+id/simplezero"
        android:text="0"/>
    <Button
        android:id="@+id/simplepoint"
        android:text="."/>



</GridLayout>
