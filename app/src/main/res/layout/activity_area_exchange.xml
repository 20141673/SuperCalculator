<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom">

    <TableRow
        android:layout_width="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_weight="1">
            <Spinner
                android:id="@+id/areaupspinner"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:entries="@array/VolumeUnit"/>
            <TextView
                android:id="@+id/areauptext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="fill_horizontal"
                android:gravity="right|center_vertical"
                android:text="0"
                android:textSize="25dp"
                android:ellipsize="start"
                android:clickable="true"
                android:onClick="clickText"
                android:maxLines="1"/>
        </LinearLayout>
    </TableRow>
    <TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/skyBlue"
            android:layout_weight="1"/>
    </TableRow>
    <TableRow
        android:layout_width="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_weight="1">

            <Spinner
                android:id="@+id/areadownspinner"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:entries="@array/VolumeUnit" />

            <TextView
                android:id="@+id/areadowntext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="fill_horizontal"
                android:gravity="right|center_vertical"
                android:clickable="true"
                android:onClick="clickText"
                android:text="0"
                android:textSize="25dp"
                android:ellipsize="start"
                android:maxLines="1"/>
        </LinearLayout>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableLayout
            android:layout_weight="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TableRow>
                <Button
                    android:id="@+id/areaseven"
                    android:layout_weight="1"
                    android:onClick="clickButton"
                    android:text="7"/>

                <Button
                    android:id="@+id/areaeight"
                    android:layout_weight="1"
                    android:onClick="clickButton"
                    android:text="8" />

                <Button
                    android:id="@+id/areanine"
                    android:layout_weight="1"
                    android:onClick="clickButton"
                    android:text="9" />
            </TableRow>
            <TableRow>

                <Button
                    android:id="@+id/areafour"
                    android:layout_weight="1"
                    android:onClick="clickButton"
                    android:text="4" />

                <Button
                    android:id="@+id/areafive"
                    android:layout_weight="1"
                    android:onClick="clickButton"
                    android:text="5"/>
                <Button
                    android:id="@+id/areasix"
                    android:layout_weight="1"
                    android:onClick="clickButton"
                    android:text="6"/>
            </TableRow>
        </TableLayout>
        <GridLayout
            android:layout_weight="1"
            android:rowCount="2"
            android:columnCount="1"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/areaac"
                android:layout_rowSpan="2"
                android:layout_gravity="fill_vertical"
                android:onClick="clickButton"
                android:text="AC"/>
        </GridLayout>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableLayout
            android:layout_weight="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TableRow
                android:layout_width="match_parent"
                android:layout_gravity="fill_horizontal">

                <Button
                    android:id="@+id/areaone"
                    android:layout_weight="1"
                    android:onClick="clickButton"
                    android:text="1" />

                <Button
                    android:layout_weight="1"
                    android:id="@+id/areatwo"
                    android:onClick="clickButton"
                    android:text="2"/>
                <Button
                    android:id="@+id/areathree"
                    android:layout_weight="1"
                    android:onClick="clickButton"
                    android:text="3"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent">
                <Button
                    android:id="@+id/areazero"
                    android:layout_weight="1"
                    android:onClick="clickButton"
                    android:text="0"/>
                <Button
                    android:id="@+id/areapoint"
                    android:layout_weight="1"
                    android:onClick="clickButton"
                    android:text="."/>
            </TableRow>
        </TableLayout>
        <GridLayout
            android:layout_weight="1"
            android:rowCount="2"
            android:columnCount="1"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/areareturn"
                android:layout_rowSpan="2"
                android:layout_gravity="fill_vertical"
                android:onClick="clickButton"
                android:text="@string/returnicon"/>

        </GridLayout>
    </TableRow>
</TableLayout>
