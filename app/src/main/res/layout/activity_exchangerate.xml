<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="bottom">
    <TableRow
        android:layout_width="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_weight="1">
            <Spinner
                android:id="@+id/currencyupspinner"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/currencyuptext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="fill_horizontal"
                android:gravity="right|center_vertical"
                android:textColor="@color/skyBlue"
                android:text="0"
                android:textSize="35dp"
                android:ellipsize="start"
                android:maxLines="1"/>
        </LinearLayout>
    </TableRow>
    <TableRow><!--中线-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/skyBlue"
            android:layout_weight="1"/>
    </TableRow>
    <TableRow>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_weight="1">
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/currencydownspinner">
            </Spinner>
            <TextView
                android:id="@+id/currencydowntext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="fill_horizontal"
                android:gravity="right|center_vertical"
                android:text="0"
                android:textSize="35dp"
                android:ellipsize="start"
                android:maxLines="1"/>
        </LinearLayout>
    </TableRow>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3">
        <TableLayout>
            <TableRow>
                <TableLayout>
                    <TableRow>
                        <Button
                            android:id="@+id/currencyseven"
                            android:onClick="clickButton"
                            android:text="7"/>
                        <Button
                            android:id="@+id/currencyeight"
                            android:onClick="clickButton"
                            android:text="8"/>
                        <Button
                            android:id="@+id/currencynine"
                            android:onClick="clickButton"
                            android:text="9"
                            />

                    </TableRow>
                    <TableRow>
                        <Button
                            android:id="@+id/currencyfour"
                            android:onClick="clickButton"
                            android:text="4"/>
                        <Button
                            android:id="@+id/currencyfive"
                            android:onClick="clickButton"
                            android:text="5"/>
                        <Button
                            android:id="@+id/currencysix"
                            android:onClick="clickButton"
                            android:text="6"/>
                    </TableRow>
                </TableLayout>
                <GridLayout
                    android:rowCount="1"
                    android:columnCount="1"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/currencyac"
                        android:layout_gravity="fill"
                        android:text="C"
                        android:layout_height="fill_parent"/>
                </GridLayout>
            </TableRow>
        </TableLayout>
    </TableLayout>
    <TableLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">
        <TableRow>
            <TableLayout>
                <TableRow>
                    <Button
                        android:id="@+id/currencyone"
                        android:onClick="clickButton"
                        android:text="1"/>
                    <Button
                        android:id="@+id/currencytwo"
                        android:onClick="clickButton"
                        android:text="2"/>
                    <Button
                        android:id="@+id/currencythree"
                        android:onClick="clickButton"
                        android:text="3"/>
                </TableRow>
                <TableRow>
                    <Button
                        android:id="@+id/currencyzero"
                        android:layout_weight="1"
                        android:onClick="clickButton"
                        android:text="0"/>

                    <Button
                        android:id="@+id/currencypoint"
                        android:layout_weight="1"
                        android:onClick="clickButton"
                        android:text="."/>
                </TableRow>
            </TableLayout>
            <GridLayout
                android:rowCount="1"
                android:columnCount="1"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/currencyreturn"
                    android:layout_gravity="fill"
                    android:text="@string/returnicon"
                    android:layout_height="fill_parent"/>
            </GridLayout>
        </TableRow>
    </TableLayout>
</TableLayout>
