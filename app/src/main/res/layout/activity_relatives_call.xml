<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    tools:context="com.cqu.supercalculator.RelativesCallActivity"
    android:weightSum="1">
    <TextView
        android:id="@+id/relativerecord"
        android:layout_height="66dp"
        android:layout_gravity="fill_horizontal"
        android:text="我"
        android:gravity="end|center_vertical"
        android:layout_weight="0.45"
        />
    <TextView
        android:id="@+id/relativeresult"
        android:layout_height="66dp"
        android:layout_gravity="fill_horizontal"
        android:text="0"
        android:gravity="end|center_vertical"
        android:layout_weight="0.45"/>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableLayout
            android:layout_weight="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TableRow>
                <Button
                    android:id="@+id/relativeac"
                    android:tag=""
                    android:layout_weight="1"
                    android:onClick="clickButton"
                    android:text="AC"/>
                <Button
                    android:id="@+id/relativehusband"
                    android:tag="的丈夫"
                    android:layout_weight="1"
                    android:onClick="clickButton"
                    android:text="夫"/>
                <Button
                    android:id="@+id/relativewife"
                    android:tag="的妻子"
                    android:layout_weight="1"
                    android:onClick="clickButton"
                    android:text="妻"/>
            </TableRow>
            <TableRow>
                <Button
                    android:id="@+id/relativereturn"
                    android:tag=""
                    android:layout_weight="1"
                    android:onClick="clickButton"
                    android:text="@string/returnicon"/>
                <Button
                    android:id="@+id/relativefather"
                    android:tag="的爸爸"
                    android:layout_weight="1"
                    android:onClick="clickButton"
                    android:text="父"/>
                <Button
                    android:id="@+id/relativemother"
                    android:tag="的妈妈"
                    android:layout_weight="1"
                    android:onClick="clickButton"
                    android:text="母"/>
            </TableRow>
        </TableLayout>
        <GridLayout
            android:layout_weight="1"
            android:rowCount="2"
            android:columnCount="1"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/relativecorrelate"
                android:layout_rowSpan="2"
                android:layout_gravity="fill_vertical"
                android:text="互查"/>
        </GridLayout>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableLayout
            android:layout_weight="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TableRow
                android:layout_width="match_parent"
                android:layout_gravity="fill_horizontal">
                <Button
                    android:id="@+id/relativeoldbro"
                    android:tag="的哥哥"
                    android:layout_weight="1"
                    android:onClick="clickButton"
                    android:text="兄"/>
                <Button
                    android:layout_weight="1"
                    android:tag="的弟弟"
                    android:id="@+id/relativelittlebro"
                    android:onClick="clickButton"
                    android:text="弟"/>
                <Button
                    android:id="@+id/relativeson"
                    android:tag="的儿子"
                    android:layout_weight="1"
                    android:onClick="clickButton"
                    android:text="子"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent">
                <Button
                    android:id="@+id/relativeoldsis"
                    android:tag="的姐姐"
                    android:layout_weight="1"
                    android:onClick="clickButton"
                    android:text="姐"/>
                <Button
                    android:id="@+id/relativelittlesis"
                    android:tag="的妹妹"
                    android:onClick="clickButton"
                    android:text="妹"/>
                <Button
                    android:id="@+id/relativedaughter"
                    android:tag="的女儿"
                    android:layout_weight="1"
                    android:onClick="clickButton"
                    android:text="女"/>
            </TableRow>
        </TableLayout>
        <GridLayout
            android:layout_weight="1"
            android:rowCount="2"
            android:columnCount="1"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/relativeequal"
                android:tag=""
                android:layout_rowSpan="2"
                android:layout_gravity="fill_vertical"
                android:onClick="clickButton"
                android:text="="/>
        </GridLayout>
    </TableRow>
</TableLayout>
